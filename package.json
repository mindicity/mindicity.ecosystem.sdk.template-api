{
  "name": "nestjs-template-api",
  "version": "1.0.0",
  "description": "Production-ready NestJS API with Fastify adapter, Pino logging, and proper configuration management",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nest start --watch",
    "build": "nest build",
    "lint": "npm run lint:check",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "lint:report": "eslint \"src/**/*.ts\" -f json -o eslint-report.json",
    "lint:test": "eslint \"src/**/*.spec.ts\" --fix",
    "lint:test:check": "eslint \"src/**/*.spec.ts\"",
    "lint:all": "eslint \"{src,test}/**/*.ts\" --fix",
    "lint:all:check": "eslint \"{src,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "npm run test:cov",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky"
  },
  "keywords": [
    "nestjs",
    "fastify",
    "pino",
    "api",
    "typescript"
  ],
  "author": "Mindicity Srl S.B.",
  "license": "EUPL-1.2",
  "dependencies": {
    "@fastify/compress": "^8.3.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/static": "^8.3.0",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-fastify": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "fastify-compress": "^4.0.1",
    "jsonwebtoken": "^9.0.3",
    "nestjs-pino": "^4.5.0",
    "nestjs-zod": "^5.0.1",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "pino-roll": "^4.0.0",
    "reflect-metadata": "^0.2.2",
    "rotating-file-stream": "^3.2.7",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.1.9",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "fast-check": "^4.4.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
