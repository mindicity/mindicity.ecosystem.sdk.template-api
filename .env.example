# Server Configuration
APP_PORT=3232
APP_API_PREFIX=/mcapi
APP_API_SCOPE_PREFIX=/project

# MCP Server Configuration
MCP_ENABLED=true
# MCP_TRANSPORT: Transport type - must be one of: http, sse (default: http)
# - http: Full functionality with tools and resources (recommended)
# - sse: Basic connectivity only, tools/resources via HTTP (limited use)
MCP_TRANSPORT=http
# MCP_PORT: Port number for HTTP/SSE transports - must be 1-65535 (default: 3235)
# Invalid values will cause application startup failure
MCP_PORT=3235
# MCP_HOST: Host for HTTP/SSE transports (default: localhost)
MCP_HOST=localhost
# MCP_SERVER_NAME=mindicity-api-template  # Optional: defaults to package.json name
# MCP_SERVER_VERSION=1.0.0  # Optional: defaults to package.json version

# ========================================
# MCP CONFIGURATION VALIDATION
# ========================================
# The MCP configuration is validated at startup with these rules:
# - MCP_TRANSPORT: Only 'http', 'sse' are allowed
# - MCP_PORT: Must be between 1 and 65535 (inclusive)
# - MCP_HOST: Cannot be empty
# - Invalid transport values use 'http' default with warning
# - Invalid port values cause application startup failure
# - All validation errors show clear messages with allowed values
#
# Transport Functionality:
# - HTTP: Complete tools and resources (recommended default)
# - SSE: Basic connectivity only, redirects to HTTP for functionality

# Error Handling
APP_ERR_DETAIL=false
APP_ERR_MESSAGE=false

# Security
APP_CORS_ENABLED=true
APP_BODYPARSER_LIMIT=20MB
APP_ENABLE_COMPRESSION=true

# Logging Configuration
APP_LOG_LEVEL=debug
APP_LOG_TRANSPORTS=console
APP_LOG_PREFIX=api_template
APP_LOG_PRETTY_PRINT=false

# HTTP Request Details Logging
# Options: none, basic, full
APP_LOG_HTTP_DETAILS=basic

# Swagger
APP_SWAGGER_HOSTNAME=http://localhost:3232

# Database Configuration
DB_CHECK=false

# ========================================
# LOGGING CONFIGURATION EXAMPLES
# ========================================

# Development (verbose with full HTTP details)
# APP_LOG_LEVEL=debug
# APP_LOG_HTTP_DETAILS=full

# Production (clean, minimal logging)
# APP_LOG_LEVEL=info
# APP_LOG_HTTP_DETAILS=none

# Debug mode (basic HTTP details)
# APP_LOG_LEVEL=trace
# APP_LOG_HTTP_DETAILS=basic
