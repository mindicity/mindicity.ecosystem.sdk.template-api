# Server Configuration
APP_PORT=3232
APP_API_PREFIX=/mcapi
APP_API_SCOPE_PREFIX=/project

# Error Handling
APP_ERR_DETAIL=false
APP_ERR_MESSAGE=false

# Security
APP_CORS_ENABLED=true
APP_BODYPARSER_LIMIT=20MB
APP_ENABLE_COMPRESSION=true

# Logging Configuration
APP_LOG_LEVEL=debug
APP_LOG_TRANSPORTS=console
APP_LOG_PREFIX=api_template
APP_LOG_PRETTY_PRINT=false

# HTTP Request Details Logging
# Options: none, basic, full
APP_LOG_HTTP_DETAILS=basic

# Swagger
APP_SWAGGER_HOSTNAME=http://localhost:3232

# Database Configuration
DB_CHECK=false

# ========================================
# LOGGING CONFIGURATION EXAMPLES
# ========================================

# Development (verbose with full HTTP details)
# APP_LOG_LEVEL=debug
# APP_LOG_HTTP_DETAILS=full

# Production (clean, minimal logging)
# APP_LOG_LEVEL=info
# APP_LOG_HTTP_DETAILS=none

# Debug mode (basic HTTP details)
# APP_LOG_LEVEL=trace
# APP_LOG_HTTP_DETAILS=basic
